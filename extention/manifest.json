{
  "manifest_version": 3,
  "name": "MCQ Screenshot AI",
  "version": "1.0",
  "description": "Click extension icon to detect MCQ answers using AI",
  "permissions": ["activeTab", "notifications", "scripting", "offscreen", "storage", "contextMenus"],
  "host_permissions": ["https://api.groq.com/*", "https://api.ocr.space/*", "https://generativelanguage.googleapis.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Detect MCQ Answer",
    "default_popup": "popup.html"
  },
  "commands": {
    "trigger-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Start MCQ selection"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
